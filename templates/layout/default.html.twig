<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Comerc Energia</title>
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="/assets/css/style.css" />
    <link rel="stylesheet" href="/assets/css/mobile.css" media="only screen and (max-device-width: 480px), only screen and (max-device-height: 480px)" />
    {% block stylesheets %}{% endblock %}                
    <script type="text/javascript" charset="utf-8">
        var app = {
            location: '{{ location }}'
        };
        var servertime = {{ timestamp }};
    </script>
</head>
<body class="app">
    <header class="app-header">
        <nav class="navbar navbar-green navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="{{ path('home') }}">
                        <img src="{{ asset('assets/images/logo.jpg') }}" alt="Zend Expressive" />
                    </a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                Localização:&nbsp;
                                <span id="location"><i class="glyphicon glyphicon-map-marker"></i> {{ location }} </span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="/">São Paulo, SP, BR</a>
                                </li>
                                <li>
                                    <a href="/?location=Rio%20de%20Janeiro">Rio de Janeiro, SP, BR</a>
                                </li>
                                <li>
                                    <a href="/?location=New%20York">Nova York, NY, US</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <img width="34" id="temp-image" src="/assets/images/loading.gif" alt="">
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="app-content">
        <main class="container">
            {% block content %}{% endblock %}
        </main>
    </div>

    <footer class="app-footer">
        <div class="container">
            <p id="clock">00:00:00</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script src="/assets/js/jqClock.min.js"></script>
    <script src="/assets/js/app.js"></script>
    {% block javascript %}{% endblock %}
</body>
</html>
